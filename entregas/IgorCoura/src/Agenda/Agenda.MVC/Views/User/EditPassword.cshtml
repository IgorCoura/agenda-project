@using Agenda.MVC.ViewModel
@model EditPasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="form-user m-auto">
  <h3 class="text-center">Alterar senha</h3>
    @using(Html.BeginForm("EditPassword", "User", FormMethod.Post))
    {
      <div class="form-group">
        <div>
          @Html.LabelFor(x => x.Password)
          @Html.PasswordFor(x => x.Password, new { @class="form-control"})
          @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div>
          @Html.LabelFor(x => x.ConfirmPassword)
          @Html.PasswordFor(x => x.ConfirmPassword, new { @class="form-control"})
          @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>
        <div class="m-3 text-center">
          <button type="submit" class="btn btn-primary m-2">Salvar</button>
          <a href='@Url.Action("Index", "Contact")' class="btn btn-link">cancelar</a>
        </div>
      </div>
      <div>
        <vc:Summary></vc:Summary>
      </div>

    }
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
