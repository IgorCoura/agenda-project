@using Agenda.MVC.ViewModel.Contact

@model EditContactViewModel

<div data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" class="scrollspy-example" tabindex="0">
  @for(var i = 0; i < Model!.Phones.Count(); i++)
  {
    <div class="mb-5 phone-form" id=@("scrollspyHeading"+i)>
       <div class="row align-items-center mb-1">
        @Html.HiddenFor(x=>x.Phones[i].Id)
        <div class="col-2">TELEFONE</div>
        <div class="col-6">
          @Html.TextBoxFor(x => x.Phones[i].FormattedPhone, new{@class = "form-control"})
          @Html.ValidationMessageFor(x => x.Phones[i].FormattedPhone)
        </div>
        <div class="col-2">
          @Html.DropDownListFor(x => x.Phones[i].PhoneTypeId, (SelectList)ViewBag.PhoneTypes, new{@class = "form-select"})
          @Html.ValidationMessageFor(x => x.Phones[i].PhoneTypeId)
        </div>
        <button name="option" value=@("RemovePhone|"+i+"|"+Model.Phones[i].Id+"|"+TempData["UserId"]) class="btn btn-outline-danger col-sm-1" type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" style="color:red">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
          </svg>
        </button>
      </div>
      <div class="form-group row align-items-center mb-1">
        <div class="col-sm-2">DESCRIÇÃO</div>
        <div class="col-sm-8">
          @Html.TextBoxFor(x => x.Phones[i].Description, new{@class = "form-control"})
          @Html.ValidationMessageFor(x => x.Phones[i].Description)
        </div>
      </div>
    </div>
  }
</div>


